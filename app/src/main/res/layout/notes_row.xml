<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    xmlns:app="http://schemas.android.com/tools"
    android:layout_margin="20dp"
    android:id="@+id/card_view"
    android:layout_marginTop="@dimen/task_card_half_spacing"
    android:layout_marginStart="@dimen/gutter"
    android:layout_marginEnd="@dimen/gutter"
    card_view:cardBackgroundColor="@color/grey"
    card_view:cardCornerRadius="2dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        >
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">
        <TextView
            android:id="@+id/posttitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="15dp"
            android:fontFamily="cursive"
            android:gravity="center"
            android:textSize="25dp"
            android:textStyle="bold"
            android:text="Here goes title"/>

        <ImageButton
            android:id="@+id/starbuttn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@mipmap/ic_star_border_black_24dp"
            android:background="@color/grey"
            android:layout_marginTop="5dp"
            android:layout_marginRight="5dp"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true" />
        </RelativeLayout>

        <View
            android:id="@+id/line"
            android:layout_width="245dp"
            android:layout_gravity="center"
            android:layout_height="1dp"
            android:layout_above="@+id/singleDesc"
            android:background="@color/teal" />

        <TextView
            android:id="@+id/postdesc"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="monospace"
            android:textSize="20dp"
            android:padding="10dp"
            android:text="Here goes description"/>

        <TextView
            android:id="@+id/posttime"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Here goes time"
            android:textAlignment="viewEnd"
            android:paddingRight="10dp"
            android:textColor="@color/colorAccent"
            />


    </LinearLayout>

</android.support.v7.widget.CardView>